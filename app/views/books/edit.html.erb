<div class="container">
  <p id="notice"><%= notice %></p>
  <h2>Editing Book</h2>
  <%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
      <div class="form-group">
        <%= f.label "Title"%>
        <%= f.text_field :title, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "Opinion" %>
        <%= f.text_area :body, class:"form-control", rows:"2" %>
      </div>

    <%= f.submit "Update User", class:"btn btn-primary btn-block" %>
  <% end %>
</div>