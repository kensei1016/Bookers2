
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th id="book-table-th-avatar"></th>
        <th id="book-table-th-title"><%= sort_link(@q, :title) %></th>
        <th id="book-table-th-opinion"><%= sort_link(@q, :body, 'Opinion') %></th>
        <th id="book-table-th-when"><%= sort_link(@q, :created_at, 'When', default_order: :desc) %></th>
      </tr>
    </thead>
    <tbody>
      <% books.each do |book| %>
      <tr> 
        <td>
          <%= link_to user_path(book.user_id) do %>
            <% if book.user.profile_image.present? %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
            <% else %>
              <%= image_tag "no_image.jpg", size: "40x40" %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
        <td><%= book.created_at.strftime('%Y/%m/%d %H:%M') %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
