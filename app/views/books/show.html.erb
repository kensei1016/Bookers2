<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/profile', {user: @user, book: @book_new} %>
    </div>
    <div class="col-xs-9">
      <%# Book detail %>
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr> 
            <td>
              <%= link_to user_path(@book.user_id) do%>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
                <br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user_id == current_user.id %>
            <td>
              <%= link_to 'Edit', edit_book_path(@book), {class:"btn btn-success"} %>
            </td>
            <td>
              <%= link_to 'Destroy', book_path(@book), {data: {confirm: "本当に消しますか？"}, method: :delete, class:"btn btn-danger"} %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <%# Book detail/ %>
      <%# Comment %>
      <div class="comment-count col-xs-12">
        <p><%= @book.post_comments.count %>件コメント</p>
      </div>
      <% @post_comments.each do |post_comment| %>
        <div class="comment-display col-xs-12">
          <div class="comment-box">
            <div class="comment-profile-box">
              <%= attachment_image_tag post_comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
              <span><%= post_comment.user.name %></span>
            </div>
            <div class="comment-text">
              <%= post_comment.comment %>
            </div>
          </div>
        </div>
      <% end %>
      <%# Comment/ %>
    </div>
  </div>
</div>