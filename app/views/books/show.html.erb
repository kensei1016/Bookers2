<div class="container">
  <p id="notice"></p>
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/profile', {user: @user, book: @book} %>
    </div>
    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr> 
            <td>
              <%= link_to user_path(@book.user_id) do%>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
                <br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user_id == current_user.id %>
            <td>
              <%= link_to 'Edit', edit_book_path(@book), {class:"btn btn-success"} %>
            </td>
            <td>
              <%= link_to 'Destroy', book_path(@book), {data: {confirm: "本当に消しますか？"}, method: :delete, class:"btn btn-danger"} %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>