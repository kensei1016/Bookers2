<div class="sign-up-background container-fluid">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="sign-up-block col-4 p-5 shadow">
      <div class="sign-up-header">
        <%= image_tag 'logo.svg', size: "100x100" %>
        <h2 class="mt-3">Bookersにサインアップ</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%#= render "devise/shared/error_messages", resource: resource %>
        
        <div class="form-group">
          <%= f.label :name, class: "sr-only" %>
          <% if resource.errors.messages[:name].any? %>
            <%= f.text_field :name, autofocus: true, autocomplete: "名前", class: "form-control is-invalid", placeholder: :name %>
          <% else %>
            <%= f.text_field :name, autofocus: true, autocomplete: "名前", class: "form-control", placeholder: :name %>
          <% end %>
          <div class="invalid-feedback">
            <%#= resource.errors.full_messages_for(:name).map{|error| "・" + error + "&lt;br/&gt;" }.join.gsub(/<br>$/, "") %>
            <%= resource.errors.full_messages_for(:name).map{|error| "#" + error + " "}.join %>
        </div>
        </div>

        <div class="form-group">
          <%= f.label :email, class: "sr-only" %>
          <% if resource.errors.messages[:email].any? %>
            <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス", class: "form-control is-invalid", placeholder: :email %>
          <% else %>
            <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス", class: "form-control", placeholder: :email %>
          <% end %>
          <div class="invalid-feedback">
            <%= resource.errors.full_messages_for(:email).map{|error| "#" + error + " "}.join %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "sr-only" %>
          <!--<% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />-->

          <% if resource.errors.messages[:password].any? %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control is-invalid", placeholder: :password %>
          <% else %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: :password %>
          <% end %>
          <div class="invalid-feedback">
            <%= resource.errors.full_messages_for(:password).map{|error| "#" + error + " "}.join %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: "sr-only" %>
          <% if resource.errors.messages[:password_confirmation].any? %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control is-invalid", placeholder: :password_confirmation %>
          <% else %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: :password_confirmation %>
          <% end %>
          <div class="invalid-feedback">
            <%= resource.errors.full_messages_for(:password_confirmation).map{|error| "#" + error + " "}.join %>
          </div>
        </div>

        <div class="actions form-group">
          <%= f.submit "Sign up", class: "btn btn-success form-control mt-3" %>
        </div>
      <% end %>
      <div class="login-link-wrapper">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>