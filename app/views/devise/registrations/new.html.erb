<div class="container">
<h2>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%#= render "devise/shared/error_messages", resource: resource %>
    
    <div class="form-group">
      <%= f.label :name %><br />
      <% if resource.errors.messages[:name].any? %>
        <%= f.text_field :name, autofocus: true, autocomplete: "名前", class: "form-control is-invalid" %>
      <% else %>
        <%= f.text_field :name, autofocus: true, autocomplete: "名前", class: "form-control" %>
      <% end %>
      <div class="invalid-feedback">
        <%#= resource.errors.full_messages_for(:name).map{|error| "・" + error + "&lt;br/&gt;" }.join.gsub(/<br>$/, "") %>
        <%= resource.errors.full_messages_for(:name).map{|error| "#" + error + " "}.join %>
     </div>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <% if resource.errors.messages[:email].any? %>
        <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス", class: "form-control is-invalid"%>
      <% else %>
        <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス", class: "form-control" %>
      <% end %>
      <div class="invalid-feedback">
        <%= resource.errors.full_messages_for(:email).map{|error| "#" + error + " "}.join %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />

      <% if resource.errors.messages[:password].any? %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control is-invalid" %>
      <% else %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <% end %>
      <div class="invalid-feedback">
        <%= resource.errors.full_messages_for(:password).map{|error| "#" + error + " "}.join %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <% if resource.errors.messages[:password_confirmation].any? %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control is-invalid"%>
      <% else %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"%>
      <% end %>
      <div class="invalid-feedback">
        <%= resource.errors.full_messages_for(:password_confirmation).map{|error| "#" + error + " "}.join %>
      </div>
    </div>

    <div class="actions form-group">
      <%= f.submit "Sign up", class: "btn btn-success" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>