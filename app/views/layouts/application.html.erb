<!DOCTYPE html>
<html>
  <head>
    <title>Bookers - あなたイチオシの本を共有しませんか？</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%# header %>
    <header class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top">
      <% if user_signed_in? %>
        <%= link_to user_path(current_user.id) do %>
          <%= image_tag 'title.svg',height: "40px", class: "navbar-brand" %>
        <% end %>
      <% else %>
        <%= link_to root_path do %>
          <%= image_tag 'title.svg',height: "40px", class: "navbar-brand" %>
        <% end %>
      <% end %>

      <nav class="collapse navbar-collapse">
        <ul class="nav navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li>
            <%= link_to user_path(current_user.id), class: "nav-link" do %>
              <%= icon 'fas', 'home' %>
              <span> Home</span>
            <% end %>
          </li>
          <li>
            <%= link_to users_path, class: "nav-link" do %>
              <%= icon 'fas', 'user' %>
              <span> Users</span>
            <% end %>
          </li>
          <li>
            <%= link_to books_path, class: "nav-link" do %>
              <%= icon 'fas', 'book' %>
              <span> Books</span>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
              <%= icon 'fas', 'sign-out-alt' %>
              <span> logout</span>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to root_path, class: "nav-link" do %>
              <%= icon 'fas', 'home' %>
              <span> Home</span>
            <% end %>
          </li>
          <li>
            <%= link_to home_about_path, class: "nav-link" do %>
              <%= icon 'fas', 'address-card' %>
              <span> About</span>
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path, class: "nav-link" do %>
              <%= icon 'fas', 'user-plus' %>
              <span> Sign up</span>
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path, class: "nav-link" do %>
              <%= icon 'fas', 'sign-in-alt' %>
              <span> Sign in</span>
            <% end %>
          </li>
        <% end %>
        </ul>
      </nav>
    </header>
    <%# header/ %>

    <%= yield %>

    <%# footer %>
    <footer>
      <div class="row justify-content-end w-100">
        <div class="col-sm-2">
          <p>CopyRight Infratop. inc</p>
        </div>
      </div>
    </footer>
    <%# footer/ %>
  </body>
</html>
