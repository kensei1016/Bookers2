<div class="container">
  <p id="notice"></p>
  <div class="row">
    <div class="col-xs-3">
      <!-- UserInfo start -->
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <a class="col-xs-12 btn btn-default btn-block glyphicon glyphicon-wrench"></a>
      </div>
      <!-- UserInfo end -->
      <!-- NewBooks start -->
      <h2>New book</h2>
      <%= form_for(@book, url: "#") do |f| %>
        <% if @book.errors.any? %>
          <div id="error_explanation">
            <h2><%= @post_image.errors.count %>件のエラーが発生しました。</h2>
            <ul>
            <% @post_image.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="row">
          <div class="form-group col-xs-12">
            <label>Title<label>
            <%= f.text_field :title, class:"form-control" %>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-xs-12">
            <label>Opinion<label>
            <%= f.text_field :body, class:"form-control" %>
          </div>
        </div>
        <div class="row">
          <%= f.submit "create books", class:"btn btn-primary col-xs-12" %>
        </div>
      <% end %>
      <!-- NewBooks end -->
    </div>

    <!-- 投稿一覧表示 start -->
    <div class="col-xs-9">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>          
          </tr>
        </thead>
        <tbody>
          <tr>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </tbody>
      </table>
    </div>
    <!-- 投稿一覧表示 end -->
  </div>
</div>