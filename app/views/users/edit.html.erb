<div class="container">
  <h2>User info</h2>
  <%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="row">
      <div class="form-group col-12">
        <%= f.label "Name"%>
        <br>
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="form-group has-icon">
      <%= f.label "Image"%>
      <%= f.attachment_field :profile_image, class: "user-edit-form" %>
    </div>   

    <div class="row">
      <div class="form-group col-12">
        <%= f.label "Introduction"%>
        <br>
        <%= f.text_area :introduction, rows:"3" %>
      </div>
    </div>

    <%= f.submit "Update User", class:"btn btn-default" %>
  <% end %>
</div>