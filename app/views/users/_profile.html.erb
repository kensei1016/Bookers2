<%# UserInfo %>
<div class="user-info-wrapper mb-3">
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <% if user.id == current_user.id %>
    <%= link_to edit_user_path(user), class: "col-12 btn btn-outline-secondary" do %>
      <%= icon 'fas', 'wrench' %>
    <% end %>
  <% else %>
    <%= link_to user_path(current_user), class: "col-12 btn btn-outline-secondary" do %>
      <%= icon 'fas', 'wrench' %>
    <% end %>
  <% end %>
</div>
<%# UserInfo/ %>
<%# NewBooks %>
<div class="new-book-wrapper">
  <h2>New book</h2>
  <%= form_for(book) do |f| %>
    <div class="form-group form-row">
      <%= f.label "Title"%>
      <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class="form-group form-row">
      <%= f.label "Opinion"%>
      <%= f.text_area :body, class:"form-control" %>
    </div>

    <div class="form-group">
      <label for="file">ファイル（複数選択可）</label>
      <div id="file" class="input-group">
        <div class="custom-file">
          <input type="file" id="cutomfile" class="custom-file-input" name="cutomfile[]" multiple />
          <label class="custom-file-label" for="customfile" data-browse="参照">ファイル選択...</label>
        </div>
        <div class="input-group-append">
          <button type="button" class="btn btn-outline-secondary reset">取消</button>
        </div>
      </div>
    </div>

    <%= f.submit "Create Book", class:"btn btn-primary form-control" %>
  <% end %>
</div>
<%# NewBooks/ %>