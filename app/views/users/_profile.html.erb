<%# UserInfo %>
<div class="user-info-wrapper mb-3">
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <% if user.id == current_user.id %>
    <%= link_to edit_user_path(user), class: "col-12 btn btn-outline-secondary" do %>
      <%= icon 'fas', 'wrench' %>
    <% end %>
  <% else %>
    <%= link_to user_path(current_user), class: "col-12 btn btn-outline-secondary" do %>
      <%= icon 'fas', 'wrench' %>
    <% end %>
  <% end %>
</div>
<%# UserInfo/ %>
<%# NewBooks %>
<div class="new-book-wrapper">
  <h2>New book</h2>
  <%= form_for(book) do |f| %>
    <div class="form-group form-row">
      <%= f.label "Title"%>
      <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class="form-group form-row">
      <%= f.label "Opinion"%>
      <%= f.text_area :body, class:"form-control" %>
    </div>
    <!--<div class="form-group">
      <%= f.label "Book Image" %>
      <%= f.attachment_field :book_image %>
    </div>-->

    <%= f.attachment_field :book_image, id: "lefile", style: "display: none;" %>
    <div class="form-group form-row">
      <input type="text", id="photoCover", class="col-8", placeholder="select file...">
      <span class="btn btn-light col-4", onclick="$('input[id=lefile]').click();">Choose</span>
    </div>

    <%= f.submit "Create Book", class:"btn btn-primary form-control" %>
  <% end %>
</div>
<%# NewBooks/ %>