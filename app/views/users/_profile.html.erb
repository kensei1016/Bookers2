<!-- UserInfo start -->
<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<div class="row">
  <% if user.id == current_user.id %>
    <%= link_to "", edit_user_path(user), class:"col-xs-12 btn btn-default btn-block glyphicon glyphicon-wrench" %>
  <% else %>
    <%= link_to "", user_path(current_user), class:"col-xs-12 btn btn-default btn-block glyphicon glyphicon-wrench" %>
  <% end %>
</div>
<!-- UserInfo end -->
<!-- NewBooks start -->
<h2>New book</h2>
<div class="row">
<%= form_for(book) do |f| %>
  <div class="form-group">
    <%= f.label "Title"%>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Opinion"%>
    <%= f.text_area :body, class:"form-control" %>
  </div>
  <%= f.submit "Create Book", class:"btn btn-primary form-control" %>
<% end %>
</div>
<!-- NewBooks end -->